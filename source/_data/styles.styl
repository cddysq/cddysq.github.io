/************************* Header **************************/

/* header-隐藏顶部线条 */
.headband {
  display: none;
}

/* header-顶部空白 */
.header, .main-inner {
  margin-top: 10px;

  +mobile() {
    margin-top: 0;
  }
}

/* 圆角 */
.header-inner, ///顶部圆角
.sidebar-inner { //侧边头像圆角
  border-radius: $custom-radius;
}

.site-brand-container {
  border-radius: $custom-radius $custom-radius 0 0;

  +mobile() {
    border-radius: 0 0 $custom-radius $custom-radius;
  }
}

/************************ Sidebar **************************/

/* sidebar-标题 */
.site-title {
  font-weight: bold;
}

/* sidebar-二级菜单圆角 */
.sub-menu {
  border-radius: $custom-radius !important;
}

/* sidebar-网站拥有者 */
.site-author-name {
  font-size: $font-size-larger;
  font-family: $font-family-custom;
}

/* sidebar-网站描述 */
.site-description {
  font-size: $font-size-medium;
  font-family: $font-family-custom;
}

/* sidebar-近期文章 */
.links-of-blogroll-title {
  font-size: $font-size-large;
}

.links-of-blogroll-list a {
  font-weight: bold;
  border-bottom: none;

  &:hover {
    color: $recent-articles-link;
    font-weight: bold;
    border-bottom: 1px solid $recent-articles-link;
  }
}

/************************** Post ***************************/

/* post-文章置顶 */
.post-sticky-flag {
  color: transparent;
  background: linear-gradient(90deg, #333333 0%, #CC0033 33.3%, #FF0033 66.6%, #333333 100%);
  background-size: 300% 100%; /*扩大背景区域*/
  -webkit-background-clip: text; /*截取背景区域为文字*/
  animation: general-animation 4s infinite linear;
}

@keyframes general-animation {
  0% {
    background-position: 0 0
  }
  100% {
    background-position: -150% 0
  }
}

/* post-文章卡片圆角 */
.post-block,
.post-block + .post-block {
  border-radius: $custom-radius !important;
}

/* post-超链接 */
.post-body li a,
.post-body p a {
  color: $custom-link;
  border-bottom: 1px solid $custom-link;

  &:hover {
    color: $custom-link-hover;
    border-bottom: 1px solid $custom-link-hover;
  }
}

/* post-结束语 */
.complimentary-close {
  text-align: center;
  color: $grey-light;
  font-size: $font-size-largest;
  letter-spacing: $font-spacing;

  +mobile() {
    font-size: $font-size-medium;
  }
}

/* post-版权声明 */
.post-copyright ul {
  border-left: 3px solid $post-copyright-border;
}


/****************** Pagination & Footer ********************/

/* footer-不蒜子统计 */
.busuanzi-count .post-meta-item:nth-child(1) {
  &::before {
    content: '访客数'
  }

  &::after {
    content: '人次'
  }
}

.busuanzi-count .post-meta-item:nth-child(2) {
  & .post-meta-item-icon::before {
    content: '总访问量'
  }

  &::after {
    content: '次';
  }
}

/* footer-网站倒计时 */
.website-time-static {
  color: transparent;
  -webkit-background-clip: text;
  background-image: -webkit-linear-gradient(left, #aa4b6b, #6b6b83, #3b8d99);
}

.website-time-dynamic {
  color: transparent;
  background-size: 300% 100%;
  -webkit-background-clip: text;
  animation: general-animation 36s infinite linear;
  background-image: linear-gradient(to right, #077dcc 0%, #f47920 10%, #d71345 20%, #ff2a2a 30%, #7e36ff 40%, #077dcc 50%, #f47920 60%, #d71345 70%, #f7acbc 80%, #ffd400 90%, #077dcc 100%);
}